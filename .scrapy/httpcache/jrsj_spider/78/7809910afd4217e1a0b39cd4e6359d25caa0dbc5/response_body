function getByClass(oParent, sClass){
	var aEle=oParent;var aResult=[];
	for(var i=0;i<aEle.length;i++){if(aEle[i].className==sClass)aResult.push(aEle[i]);}return aResult;}

function createTab(v){
	var oTit=document.getElementById(v.id).getElementsByTagName("h2");
	var oBox=document.getElementById(v.id).getElementsByTagName('div');
	var thisA=getByClass(oBox, v.setCss);
	for(var i=0;i<oTit.length;i++){oTit[i]._index=i;oTit[i][v.ev]=function (){for(i=0;i<oTit.length;i++)
	{oTit[i].className='';thisA[i].style.display='none';}this.className=v.cName;thisA[this._index].style.display='block';};}}

function top(id){
	var oTop=document.getElementById(id).getElementsByTagName("li");
	for(var i=0; i<oTop.length; i++){oTop[i].className="top"+(i+1);}}
	
window.onload=function (){
	//ev:鼠标事件,id:查找的ID,setCss:显示\隐藏css类名,cName：选中状态
	createTab({ev:"onmousemove",id:"tab",setCss:"tabMain",cName:"current"});
	top("top");top("top24");top("top1");
};
